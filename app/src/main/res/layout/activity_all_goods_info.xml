<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_all_goods_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="atguigu.com.actualproject.activity.AllGoodsInfoActivity">

    <ScrollView
        android:id="@+id/scrollview_all"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1e2125">

        <LinearLayout
            android:id="@+id/ll_all"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.youth.banner.Banner
                android:id="@+id/all_goods_banner"
                android:layout_width="match_parent"
                android:layout_height="500dp">

            </com.youth.banner.Banner>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="200dp">

                <TextView
                    android:id="@+id/all_doods_goodsname1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:text="商品名称"
                    android:textColor="#cccccc"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/all_doods_goodsinfo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_below="@id/all_doods_goodsname1"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="15dp"
                    android:text="商品介绍"
                    android:textColor="#cccccc"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/all_goods_image1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/ic_free_shiptip" />

                <TextView
                    android:id="@+id/all_goods_moneytext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/all_goods_image1"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="20dp"
                    android:text="￥"
                    android:textColor="#678cb4"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/goods_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/all_goods_image1"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@id/all_goods_moneytext"
                    android:text="1999.0"
                    android:textColor="#678cb4"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/all_goods_textview1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/all_goods_image1"
                    android:text="免运费"
                    android:textColor="#4f4f4f" />

                <ImageView
                    android:id="@+id/all_goods_image2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@id/all_goods_textview1"
                    android:src="@drawable/ic_real_good" />

                <TextView
                    android:id="@+id/all_goods_textview2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/all_goods_image2"
                    android:text="正品授权"
                    android:textColor="#4f4f4f" />

                <ImageView
                    android:id="@+id/all_goods_image3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@id/all_goods_textview2"
                    android:src="@drawable/ic_free_shiptip" />

                <TextView
                    android:id="@+id/three_day_send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/all_goods_image3"
                    android:text="现货商品3天发货"
                    android:textColor="#4f4f4f" />

                <ImageView
                    android:id="@+id/all_goods_favor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_favor_no_data" />

                <TextView
                    android:id="@+id/all_goods_textview3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/all_goods_favor"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:text="152"
                    android:textColor="#678cb4" />

                <ImageView
                    android:id="@+id/shardSDK"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/all_goods_textview3"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_share_shopgood" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="30dp"
                android:background="#2c2f34"
                android:orientation="horizontal"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_pack_selected" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="选择"
                        android:textColor="#cccccc" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="尺码"
                        android:textColor="#cccccc" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="颜色"
                        android:textColor="#cccccc" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="数量"
                        android:textColor="#cccccc" />

                </LinearLayout>

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_order_arrow_right" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="40dp"
                android:background="#2c2f34"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/brand_goods_image2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"/>

                    <TextView
                        android:id="@+id/all_doods_goodsname2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:text="艺术品"
                        android:textColor="#cccccc"
                        android:textSize="20dp" />
                </LinearLayout>

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_order_arrow_right" />

            </LinearLayout>

            <RadioGroup
                android:id="@+id/rg_brand_goods"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="40dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/brand_goods_btn1"
                    style="@style/brandStyle"
                    android:text="商品详情" />

                <RadioButton
                    android:id="@+id/brand_goods_btn2"
                    style="@style/brandStyle"
                    android:text="购物须知" />
            </RadioGroup>

            <FrameLayout
                android:id="@+id/brand_frame"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#1e2125">

                <RelativeLayout
                    android:id="@+id/fram_shoppingnotice"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/brand_goods_textview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="30dp"
                        android:background="#1e2125"
                        android:textSize="12dp"
                        android:text="文字说明"
                        android:textColor="#cccccc"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="15dp"
                        android:background="#444950"
                        android:text="售后须知"
                        android:textColor="#7f7f7f" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/fram_goodsinfo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/all_doods_allgoodsinfo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                    </LinearLayout>

                    <TextView
                        android:id="@+id/goods_desc"
                        android:layout_margin="15dp"
                        android:textSize="12sp"
                        android:textColor="#cccccc"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <View
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:background="#44596f" />

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:textColor="#cccccc"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:layout_height="wrap_content"
                            android:text="品  牌  简  介" />

                        <View
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_marginLeft="10dp"
                            android:background="#44596f" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/all_doods_goodsname3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="10dp"
                        android:text="产品名称"
                        android:textColor="#cccccc"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/all_doods_goodsname4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:text="产品介绍"
                        android:textSize="12sp"
                        android:textColor="#cccccc"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <View
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:background="#44596f" />

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:textColor="#cccccc"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:layout_height="wrap_content"
                            android:text="猜  你  喜  欢" />

                        <View
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_marginLeft="10dp"
                            android:background="#44596f" />
                    </LinearLayout>
                </LinearLayout>

            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:background="#1e2125"
                android:layout_height="45dp"/>

        </LinearLayout>

    </ScrollView>

    <ImageView
        android:id="@+id/navigation_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/actionbar_navigation_back" />

    <ImageView
        android:id="@+id/navigation_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/actionbar_navigation_cart" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ic_custom_service"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="#1b4a6d"
            android:src="@drawable/ic_custom_service_select" />

        <Button
            android:id="@+id/add_shoppingcart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#3a668e"
            android:gravity="center"
            android:text="加入购物车"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/buying"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#6f98c3"
            android:gravity="center"
            android:text="直接购买"
            android:textColor="#ffffff" />

    </LinearLayout>

</RelativeLayout>
