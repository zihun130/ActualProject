<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ijkvideo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="atguigu.com.actualproject.personal_center.IJKVideoActivity">

    <atguigu.com.actualproject.IJKPlayer.IjkVideoView
        android:id="@+id/IJKVideo_view"
        android:layout_width="match_parent"
        android:layout_height="280dp">
    </atguigu.com.actualproject.IJKPlayer.IjkVideoView>


    <master.flame.danmaku.ui.widget.DanmakuView
        android:id="@+id/IJK_danmaku"
        android:layout_width="match_parent"
        android:layout_height="280dp" />


    <ImageView
        android:id="@+id/ijk_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/abc_ic_ab_back_mtrl_am_alpha" />

    <TextView
        android:id="@+id/av_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/ijk_image"
        android:text="av12394960"
        android:textColor="#ffffff"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/iv_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_action_more" />

</RelativeLayout>
