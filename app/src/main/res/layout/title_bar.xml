<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/title_bar"
    android:background="#15171a"
    android:gravity="center_vertical"
    android:layout_height="40dp">

    <ImageView
        android:id="@+id/title_image"
        android:layout_marginLeft="10dp"
        android:visibility="gone"
        android:src="@drawable/abc_ic_search_api_mtrl_alpha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/title_back"
        android:src="@drawable/actionbar_navigation_back"
        android:visibility="gone"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/title_date"
        android:layout_marginLeft="10dp"
        android:visibility="gone"
        android:text="Today"
        android:textColor="#063ea7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="商 店"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/title_shoppingcart"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:src="@drawable/actionbar_navigation_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/title_select"
        android:src="@drawable/title_seclect"
        android:visibility="gone"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>